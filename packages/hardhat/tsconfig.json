{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/.pnpm/@types+*/*"
    ],
    "paths": {
      "*": ["./node_modules/*", "./node_modules/.pnpm/*"]
    }
  },
  "include": [
    "./scripts",
    "./test",
    "./deploy",
    "./hardhat.config.ts"
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}
